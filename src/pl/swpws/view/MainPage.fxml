<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.swpws.controller.MainPage">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
         <Menu mnemonicParsing="false" text="New">
           <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleFirstTask" text="Experiment..." />
           </items>
         </Menu>
         <SeparatorMenuItem mnemonicParsing="false" />
         <MenuItem mnemonicParsing="false" onAction="#handleCloseMenuItem" text="Close" />
        </Menu>
        <Menu mnemonicParsing="false" text="Settings" />
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
        </Menu>
    </MenuBar>
    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
        <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="100.0" style="-fx-background-color: #005b96;" BorderPane.alignment="CENTER">
                <ImageView blendMode="SCREEN" fitHeight="88.0" fitWidth="281.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                    <Image url="@../swps_logo.png" />
                </ImageView>
            </VBox>
        </center>
    </BorderPane>
</VBox>
